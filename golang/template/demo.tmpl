{{if gt 2 1}} if条件命中 {{end}}
{{if gt 1 2}} if条件命中 {{else}} else条件命中 {{end}}
{{if gt 1 2}} if条件命中 {{else if gt 3 1}} else if 条件命中 {{end}}
